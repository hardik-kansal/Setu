{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "out",
        "rootDir": "",
        "sourceMap": true,
        "strict": true,
        "target": "es2020",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "**/*.spec.ts",
        "node_modules"
    ],
    "include": [
        "**/*"
    ]
}
